{% extends 'base.html.twig' %}

{% block body %}
    <h1>Personnes list</h1>

    <table border="1">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Cin</th>
                <th>Matricule</th>
                <th>Cnss</th>
                <th>Departement</th>
                <th>Poste</th>
                <th>Centreinteret</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for personne in personnes %}
            <tr>
                <td><a href="{{ path('admin_personne_show', { 'id': personne.id }) }}">{{ personne.id }}</a></td>
                <td>{{ personne.nom }}</td>
                <td>{{ personne.prenom }}</td>
                <td>{{ personne.cin }}</td>
                <td>{{ personne.matricule }}</td>
                <td>{{ personne.cnss }}</td>
                <td>{{ personne.departement }}</td>
                <td>{{ personne.poste }}</td>
                <td>{{ personne.centreInteret }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_personne_show', { 'id': personne.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_personne_edit', { 'id': personne.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_personne_new') }}">Create a new personne</a>
        </li>
    </ul>
{% endblock %}
