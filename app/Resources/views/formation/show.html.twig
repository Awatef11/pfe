{% extends 'base.html.twig' %}

{% block body %}
    <h1>Formation</h1>

    <table border="1">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ formation.id }}</td>
            </tr>
            <tr>
                <th>Formation</th>
                <td>{{ formation.formation }}</td>
            </tr>
            <tr>
                <th>Seminaire</th>
                <td>{{ formation.seminaire }}</td>
            </tr>
            <tr>
                <th>Datedebut</th>
                <td>{% if formation.dateDebut %}{{ formation.dateDebut|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datefin</th>
                <td>{% if formation.dateFin %}{{ formation.dateFin|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Annee</th>
                <td>{{ formation.annee }}</td>
            </tr>
            <tr>
                <th>Nbrpersonne</th>
                <td>{{ formation.nbrPersonne }}</td>
            </tr>
            <tr>
                <th>Matricule</th>
                <td>{{ formation.matricule }}</td>
            </tr>
            <tr>
                <th>Categories</th>
                <td>{{ formation.categories }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_formation_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('admin_formation_edit', { 'id': formation.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
